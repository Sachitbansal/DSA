{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run CPP (Striver Style)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "g++ \"${file}\" -o /tmp/cp_run && /tmp/cp_run < \"${fileDirname}/../../../input.txt\" > \"${fileDirname}/../../../output.txt\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                \"$gcc\"
            ],
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}
